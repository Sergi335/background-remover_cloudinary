---
import Layout from '../layouts/Layout.astro';
import ImageUploader from '../components/ImageUploader.astro';
---

<Layout title="AI Background Remover">
	<main class="min-h-screen bg-gray-100">
		<div class="max-w-4xl mx-auto py-12 px-4">
			<h1 class="text-4xl font-bold text-center text-gray-900 mb-8">
				AI Background Remover
			</h1>
			<p class="text-center text-gray-600 mb-8">
				Upload an image and use the slider to compare the original with the background removed version
			</p>
			<ImageUploader />
		</div>
	</main>
</Layout>

<style>
  main {
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
  }
</style>